@model SacramentApp.Models.Talks

@{
    ViewData["Title"] = "Create";
}


<h4>Create a Talk?</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
              <input type="hidden" asp-for="MeetingId" class="form-control" value="@ViewData["MId"]"/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="NameSpeaker" class="control-label"></label>
                <input asp-for="NameSpeaker" class="form-control" />
                <span asp-validation-for="NameSpeaker" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Topic" class="control-label"></label>
                <input asp-for="Topic" class="form-control" />
                <span asp-validation-for="Topic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
